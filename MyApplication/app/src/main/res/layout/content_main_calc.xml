<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.komarov.calculator.activity.MainCalcFragment"
    tools:showIn="@layout/activity_main_calc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtSolution"
            style="@style/CalcTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:freezesText="true" />

        <TextView
            android:id="@+id/txtInput"
            style="@style/CalcTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:freezesText="true" />

    </RelativeLayout>

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_weight="1">-->

    <!--</LinearLayout>-->
    <android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/buttonAdd"
            style="@style/CalcButton"
            android:text="@string/button_plus" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/CalcButton"
            android:text="@string/button_sub" />

        <Button
            android:id="@+id/buttonMul"
            style="@style/CalcButton"
            android:text="@string/button_mul" />

        <Button
            android:id="@+id/buttonDiv"
            style="@style/CalcButton"
            android:text="@string/button_div" />

        <Button
            android:id="@+id/buttonSeven"
            style="@style/CalcButton"
            android:text="@string/button_number_7" />

        <Button
            android:id="@+id/buttonEight"
            style="@style/CalcButton"
            android:text="@string/button_number_8" />

        <Button
            android:id="@+id/buttonNine"
            style="@style/CalcButton"
            android:text="@string/button_number_9" />

        <Button
            android:id="@+id/buttonPercent"
            style="@style/CalcButton"
            android:text="@string/button_percent" />

        <Button
            android:id="@+id/buttonFour"
            style="@style/CalcButton"
            android:text="@string/button_number_4" />

        <Button
            android:id="@+id/buttonFive"
            style="@style/CalcButton"
            android:text="@string/button_number_5" />

        <Button
            android:id="@+id/buttonSix"
            style="@style/CalcButton"
            android:text="@string/button_number_6" />

        <Button
            android:id="@+id/buttonClear"
            style="@style/CalcButton"
            android:text="@string/button_clear" />

        <Button
            android:id="@+id/buttonOne"
            style="@style/CalcButton"
            android:text="@string/button_number_1" />

        <Button
            android:id="@+id/buttonTwo"
            style="@style/CalcButton"
            android:text="@string/button_number_2" />

        <Button
            android:id="@+id/buttonThree"
            style="@style/CalcButton"
            android:text="@string/button_number_3" />

        <Button
            android:id="@+id/buttonBackspace"
            style="@style/CalcButton"
            android:text="@string/button_backspace" />


        <Button
            android:id="@+id/buttonZero"
            style="@style/CalcButton"
            android:text="@string/button_number_0" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/CalcButton"
            android:text="@string/button_dot" />


    </android.widget.GridLayout>
</LinearLayout>